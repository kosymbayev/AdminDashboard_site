@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap');

// VARS
color_primary = #7380ec
color_danger = #ff7782
color_success = #41f1b6
color_warning = #ffbb55
color_white = #fff
color_info_dark = #7d8da1
color_info_light = #dce1eb
color_dark = #363949
color_light = rgba(132, 139, 200, 0.18)
color_primary_variant = #111e88
color_dark_variant = #677483
color_background = #f6f6f9

card_border_radius = 2rem
border_radius_1 = 0.4rem
border_radius_2 = 0.8rem
border_radius_3 = 1.2rem

card_padding = 1.8rem
padding_1 = 1.2rem

box_shadow = 0 2rem 3rem color_light

// GENERAL
*
    margin 0
    padding 0
    outline 0
    appearance none
    border 0
    text-decoration none
    list-style none
    box-sizing border-box

html
    font-size 14px

body
    width 100vw
    height 100vh
    font-family montserrat, sans-serif
    font-size 0.88rem
    background color_background
    user-select none
    overflow-x hidden
    color color_dark

.container
    display grid
    width 96%
    margin 0 auto
    gap 1.8rem
    grid-template-columns 14rem auto 23rem

a
    color color_dark

img
    display block
    width 100%

h1
    font-weight 800
    font-size 1.8rem

h2
    font-size 1.4rem

h3
    font-size 0.87rem

h4
    font-size 0.8rem

h5
    font-size 0.77rem

small
    font-size 0.75rem

.text_muted
    color color_info_dark

p
    color color_dark_variant

b
    color color_dark

.primary
    color color_primary !important

.danger
    color color_danger !important

.success
    color color_success !important

.warning
    color color_warning !important

.profile_photo
    width 2.8rem
    height 2.8rem
    border-radius 50%
    overflow hidden

.material-symbols-sharp
    font-variation-settings:
    'FILL' 1,
    'wght' 400,
    'GRAD' 0,
    'opsz' 48

// ASIDE
aside
    height 100vh
    .top
        display flex
        align-items center
        justify-content space-between
        margin-top 1.4rem

    .logo
        display flex
        gap 0.8rem
        img
            width 2rem
            height 2rem
    .close
        display none

    // SIDEBAR
    .sidebar
        position relative
        display flex
        flex-direction column
        top 3rem
        height 86vh
        a
            position relative
            display flex
            align-items center
            height 3.7rem
            color color_info_dark
            margin-left 2rem
            gap 1rem 
            transition all 300ms ease
            &:hover
                color color_primary
                span
                    margin-left 1rem
            &.active
                background color_light
                color color_primary
                margin-left 0
                &:before
                    content ''
                    width 6px
                    height 100%
                    background color_primary
                span
                    color color_primary
                    margin-left calc(1rem - 3px)
            &:last-child
                position absolute
                bottom 2rem
                width 100%
            span
                font-size 1.6rem
                transition all 300ms ease
        h3
            font-weight 500

        .message_count
            background color_danger
            color color_white
            padding 2px 10px
            font-size 11px
            border-radius border_radius_1

// MAIN
main
    margin-top 1.4rem

    // DATE
    .date
        display inline-block
        background color_light
        border-radius border_radius_1
        margin-top 1rem
        padding 0.5rem 1.6rem
        input[type='date']
            background transparent
            color color_dark

    // INSIGHTS
    .insights
        display grid
        grid-template-columns repeat(3, 1fr)
        gap 1.6rem

        > div
            background color_white
            padding card_padding
            border-radius card_border_radius
            margin-top 1rem
            box-shadow box_shadow
            &:hover
                box-shadow none
            &.expenses span
                background color_danger
            &.income span
                background color_success
            span
                background color_primary
                padding 0.5rem
                border-radius 50%
                color color_white
                font-size 2rem

            .middle
                display flex
                align-items center
                justify-content space-between

        h3
            margin 1rem 0 0.6rem
            font-size 1rem

        .progress
            position relative
            width 92px
            height 92px
            border-radius 50%

        svg
            width 7rem
            height 7rem
            circle
                fill none
                stroke color_primary
                stroke-width 14 
                stroke-linecap round
                transform translate(5px, 5px)
                stroke-dasharray 110
                stroke-dashoffset 92

        .sales svg circle
            stroke-dashoffset -30
            stroke-dashoffset 200

        .expenses svg circle
            stroke-dashoffset 20
            stroke-dashoffset 80

        .income svg circle
            stroke-dashoffset 35
            stroke-dashoffset 110

        .progress .number
            position absolute
            top 0
            left 0
            height 100%
            width 100%
            display flex
            justify-content center
            align-items center

        small
            display block
            margin-top 1.6rem

    // RECENT ORDERS
    .recent_orders
        margin-top 2rem

        h2
            margin-bottom 0.8rem

        table
            background color_white
            width 100%
            border-radius card_border_radius
            padding card_padding
            text-align center
            box-shadow box_shadow
            transition all 300ms ease
            &:hover
                box-shadow none

            tbody 
                td
                    height 2.8rem
                    border-bottom 1px solid color_light
                    color color_dark_variant
                tr:last-child td
                    border none

        a
            text-align center
            display block
            margin 1rem auto
            color color_primary

// RIGHT
.right
    margin-top 1.4rem

    .top
        display flex
        justify-content end
        gap 2rem
        button
            display none
        .profile
            display flex
            gap 2rem
            text-align right 

    .theme_toggler
        background color_light
        display flex
        justify-content space-between
        align-items center
        height 1.6rem
        width 4.2rem
        cursor pointer
        border-radius border_radius_1
        span
            font-size 1.2rem
            width 50%
            height 100%
            display flex
            align-items center
            justify-content center
            &.active
                background color_primary
                color color_white
                border-radius border_radius_1

    // RECENT UPDATES
    .recent_updates
        margin-top 1rem
        h2
            margin-bottom 0.8rem
        .updates
            background color_white
            padding card_padding
            border-radius card_border_radius
            box-shadow box_shadow
            transition all 300ms ease
            &:hover
                box-shadow none
                
            .update
                display grid
                grid-template-columns 2.6rem auto
                gap 1rem
                margin-bottom 1rem

    // SALES ANALYTICS
    .sales_analytics
        margin-top 2rem
        h2
            margin-bottom 0.8rem
        .item
            background color_white
            display flex
            align-items center
            gap 1rem
            margin-bottom 0.7rem
            padding 1.4rem card_padding
            border-radius border_radius_3
            box-shadow box_shadow
            transition all 300ms ease
            &:hover
                box-shadow none
            &.offline .icon
                background color_danger
            &.customers .icon
                background color_success

            .right
                display flex
                justify-content space-between
                align-items start
                margin 0
                width 100%

            .icon
                padding 0.6rem
                color color_white
                border-radius 50%
                background color_primary
                display flex

        .add_product
            background-color transparent
            border 2px dashed color_primary
            color color_primary
            display flex
            align-items center
            justify-content center
            div
                display flex
                align-items center
                gap 0.6rem
                h3
                    font-weight 600

// MEDIA
@media screen and (max-width: 1200px)
    .container
        width 94%
        grid-template-columns 7rem auto 23rem

    aside
        .logo h2
            display none

        .sidebar 
            h3
                display none
            a
                width 5.6rem
                &:last-child
                    position relative
                    margin-top 1.8rem

    main
        .insights
            grid-template-columns 1fr
            gap 0

        .recent_orders
            width 94%
            position absolute
            left 50%
            transform translateX(-50%)
            margin 2rem 0 0 8.8rem
            table
                width 83vw
                thead tr th
                    &:first-child
                    &:last-child
                        display none
                tbody tr td
                    &:first-child
                    &:last-child
                        display none

@media screen and (max-width: 768px)
    .container
        width 100%

    aside
        position fixed
        left 0
        background color_white
        width 18rem
        z-index 3
        box-shadow 1rem 3rem 4rem color_light
        height 100vh
        padding-right card_padding
        display none
        .logo
            margin-left 1rem
            h2
                display inline
        
        .sidebar
            h3
                display inline
            a
                width 100%
                height 3.4rem
                &:last-child
                    position absolute
                    bottom 5rem
        .close
            display inline-block
            cursor pointer

    main
        margin-top 8rem
        padding 0 1rem
        .recent_orders
            position relative
            margin 3rem 0 0 0
            width 100%
            table
                width 100%
                margin 0
        
    .right
        width 94%
        margin 0 auto 4rem
        .top
            position fixed
            top 0
            left 0
            align-items center
            padding 0 0.8rem
            height 4.6rem
            background color_white
            width 100%
            margin 0
            z-index 2
            box-shadow 0 1rem 1rem color_light
            .theme_toggler
                width 4.4rem
                position absolute
                left 66%
            button
                display inline-block
                background transparent

        .profile .info
            display none